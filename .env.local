# Local development environment variables

# Database Configuration (pointing to Docker PostgreSQL)
DATABASE_URL=postgresql+asyncpg://docker:docker@localhost:5433/postgres

# RabbitMQ Configuration (pointing to Docker RabbitMQ)
RABBITMQ_URL=amqp://guest:guest@localhost:5672//

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
APP_HOST=localhost
APP_PORT=8000
APP_RELOAD=true

# AI Services Configuration
OLLAMA_URL=http://localhost:11434
AI_MANAGER_URL=http://localhost:8000
AI_MANAGER_API_KEY=your-ai-manager-api-key-here

# RAG Service Configuration
RAG_MANAGER_URL=http://localhost:8001
RAG_SERVICE_API_KEY=your-rag-service-api-key-here

# Security Configuration
SECRET_KEY=your-super-secret-key-for-local-development-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@localhost.local
