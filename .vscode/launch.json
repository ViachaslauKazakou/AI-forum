{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Server (Poetry)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [],
            "justMyCode": true,
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "FastAPI Server (Uvicorn)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env.local",
            "justMyCode": true,
            "python": "${workspaceFolder}/.venv/bin/python",
            "jinja": true
        },
        {
            "name": "AI Forum: Local Development",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DATABASE_URL": "postgresql+asyncpg://docker:docker@localhost:5433/postgres",
                "RABBITMQ_URL": "amqp://guest:guest@localhost:5672//",
                "REDIS_URL": "redis://localhost:6379",
                "LOG_LEVEL": "DEBUG",
                "DEBUG": "true",
                "DEVELOPMENT": "true"
            },
            "envFile": "${workspaceFolder}/.env.local",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "subProcess": true,
            "python": "${workspaceFolder}/.venv/bin/python",
            "jinja": true
        },
        {
            "name": "AI Forum: Celery Worker Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_celery.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DATABASE_URL": "postgresql+asyncpg://docker:docker@localhost:5433/postgres",
                "RABBITMQ_URL": "amqp://guest:guest@localhost:5672//",
                "REDIS_URL": "redis://localhost:6379",
                "LOG_LEVEL": "DEBUG",
                "DEBUG": "true",
                "DEVELOPMENT": "true"
            },
            "envFile": "${workspaceFolder}/.env.local",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "subProcess": true,
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "AI Forum: Docker Debug",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ]
}